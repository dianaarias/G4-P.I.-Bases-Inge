@{
    ViewBag.Title = "Index";
}

<h2>Mis Proyectos
    <a href="@Url.Action("Create","PROYECTO", new { })" style="float:right">
        <img src="~/images/plus.svg" width="30" height="30" />
    </a>
</h2>

<table class="table table-bordered table-striped">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.idProyectoPK)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.objetivo)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.fechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaFin)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.costoEstimado)
