        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.CLIENTE.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.idProyectoPK)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.objetivo)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.fechaInicio)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.fechaFin)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.CLIENTE.name)
            </td>
            <td>
                <div class="col text-center">
                    @*Escondidas las opciones de editar y borrar en Index por requerimientos del sistema*@
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.idProyectoPK }) |*@
                    @Html.ActionLink("Más información", "Details", new { id = item.idProyectoPK }, new { @class = "btn btn-outline-secondary btn-sm text-center" })
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.idProyectoPK })*@
                </div>
            </td>
        </tr>

    }

</table>

