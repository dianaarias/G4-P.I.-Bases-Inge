@model IEnumerable<PI_EXPERT_SA_WEB.Models.ListaDesResp>
@using PI_EXPERT_SA_WEB.Models

<h2>Lista de desarrolladores responsables</h2>

<table id="tablaPrincipal" class="table table-bordered table-striped" width="80%" align="left" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreProy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreResp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreReq)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoReq)
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">
                No hay resultados
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreResp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreReq)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoReq)
                </td>
            </tr>
        }
    }
    </table>



