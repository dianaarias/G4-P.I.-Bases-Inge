
@{
    ViewBag.Title = "HistorialDesarrollador";
}

@*Devolverse al index de consultas*@
<a href="@Url.Action("Index","CONSULTAS", new {})" class="boton-icono" style="float:left">
    <img src="~/images/left-arrow.svg" width="30" height="30" />
</a>


@*.Este script recibi de parametro el id de empleado y llama la consulta de mostrar historial*@
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {

        $("#empleados").change(function () {
            var empleadoID = $("#empleados").val();
            $("#tablahistorial").load('/CONSULTAS/MostrarHistorial', { cedulaPK: empleadoID })
        });
    });
</script>



@*Lista desarrolladores*@
<div class="form-group row offset-3">
    @Html.Label("Desarrollador", new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("empleados", null, "--Seleccionar Desarrollador--", htmlAttributes: new { @class = "form-control" })
    </div>
</div>



@*Espacio para desplegar dropdownlist de proyectos*@
<div id="tablahistorial"> </div>
