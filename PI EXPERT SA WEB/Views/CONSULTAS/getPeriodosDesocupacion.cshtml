@model IEnumerable<PI_EXPERT_SA_WEB.Models.SP_PeriodosDesocupacion_Result>
@using PI_EXPERT_SA_WEB.Models
@{
    ViewBag.Title = "getPeriodosDesocupacion";
}

<h2>Periodos de desocupación</h2>

<table class="table table-bordered table-striped" width="80%" align="left" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Inicio_rango_desocupación)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fin_rango_desocupación)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Días_de_desocupación)
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">
                No hay resultados
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Inicio_rango_desocupación)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fin_rango_desocupación)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Días_de_desocupación)
                </td>
            </tr>
        }
    }

</table>
