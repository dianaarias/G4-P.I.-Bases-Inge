
@{
    ViewBag.Title = "getPeriodosDesocupacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Botón de atrás/volver al Index de Consultas*@
<a href="@Url.Action("Index","CONSULTAS", new {})" class="boton-icono" style="float:left">
    <img src="~/images/left-arrow.svg" width="30" height="30" />
</a>

<h2>Periodos de desocupación de Empleados</h2>

@*Solicita los parámetros al usuario (rango de fechas), los cuales pasará al controlador por medio del script*@
<form method="get" action="@Url.Action("getPeriodosDesocupacion", "CONSULTAS")">
    <label for="getPeriodosDesocupacion">Insertar fecha de inicio:</label>
    <input name="fechaInicioR" id="fechaInicioR" type="date" />
</form>
<form method="get" action="@Url.Action("getPeriodosDesocupacion", "CONSULTAS")">
    <label for="getPeriodosDesocupacion">Insertar fecha de fin:</label>
    <input name="fechaFinR" id="fechaFinR" type="date" />
</form>
<button type="submit">Buscar</button>

@*Muestra el nombre de las columnas de los resultados*@
<table id="getPeriodosDesocupacion" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Fecha Inicio Rango
            </th>
            <th>
                Fecha Finalización Rango
            </th>
            <th>
                Días de desocupación
            </th>
        </tr>
    </thead>
</table>

