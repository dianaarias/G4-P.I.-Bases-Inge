@*Se hace uso de forms para recopilar la información.*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*Selección de proyecto cuyo equipo se desea crear*@
        <div class="form-group required">
            @Html.Label("Proyecto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idProyectoPK", null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.idProyectoPK, "", new { @class = "text-danger" })*@
            </div>
        </div>


        <div class="form-group row">
            @Html.Label("Desarrollador", htmlAttributes: new { @class = "control-label" }) 
            <div class="col-md-10">
                @*@Html.DropDownList("cedulaPK", null, "--Seleccionar Desarrollador--", htmlAttributes: new { @class = "form-control" })*@
                @foreach (var item in ViewBag.cedulaPK)
                {
                    <ul>
                        <li>@item.Text</li>
                    </ul>

                }
            </div>
        </div>


    </div>

}

<div class="col text-center">
    <div class="form-group">
        <div class="col-md-auto" style="margin-top: 50px">
            <input type="image" src="~/images/success.svg" alt=”submit” name=”submit” width="50" height="50" style="float: unset" />
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
