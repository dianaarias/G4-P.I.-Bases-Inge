@model IEnumerable<PI_EXPERT_SA_WEB.Models.CLIENTE>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de clientes</h2>
<a href="@Url.Action("Create","CLIENTE", new { })" style="float:right">
    <img src="~/images/plus.svg" width="30" height="30" />
</a>
@*El metodo para el buscador *@
@using (Html.BeginForm("Index", "CLIENTE", FormMethod.Get))
{
    @Html.TextBox("busqueda")<input type="submit" value="Busqueda" />
}
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellido1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            Ver mas información
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">
                No hay resultados
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.correo)
                </td>
                <td>
                    @*Aqui se muestra el boton para buscar detalles*@
                    <a href="@Url.Action("Details", "CLIENTE", new { id = item.cedulaPK })" style="float:unset">
                        <img src="~/images/more.svg" width="30" height="30" />
                    </a>
                </td>
            </tr>
        }
    }

</table>

