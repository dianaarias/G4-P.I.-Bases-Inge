@model PI_EXPERT_SA_WEB.Models.CLIENTE

@{
    ViewBag.Title = "Delete";
}

<a href="@Url.Action("Details", "CLIENTE", new { id=Model.cedulaPK })" class="boton-icono" style="float:left">
    <img src="~/images/left-arrow.svg" width="30" height="30" />
</a>

