@model PI_EXPERT_SA_WEB.Models.MODULO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*Boton para devolverse al index*@
<a href="@Url.Action("Index","MODULO", new {})" class="boton-icono" style="float:left">
    <img src="~/images/left-arrow.svg" width="30" height="30" />
</a>

<h2>Crear Modulo</h2>



<div class="required-field-asterisk">
    <p>*<span style="color:black">Campos requeridos</span> </p>
</div>




@*Formulario que envia el elemento Bind al post Create*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    @*Despliega el nombre del proyecto donde se está creando el módulo*@
    <div class="form-group row offset-3">
        @Html.LabelFor(model => model.idProyectoPK, "Nombre del Proyecto", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @TempData.Peek("nombreProyecto")
            @Html.ValidationMessageFor(model => model.idProyectoPK, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group row offset-3 required">
        @Html.LabelFor(model => model.idModuloPK, "ID del módulo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.idModuloPK, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.idModuloPK, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row offset-3">
        @Html.LabelFor(model => model.nombre, "Nombre del Módulo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @*@Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })*@

        </div>
    </div>

    <div class="form-group row offset-3">
        @Html.LabelFor(model => model.fechaInicio, "Fecha de Inicio", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.fechaInicio, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @*@Html.ValidationMessageFor(model => model.fechaInicio, "", new { @class = "text-danger" })*@
        </div>
    </div>


    <div class="col text-center">
        <div class="form-group">
            <div class="col-md-auto" style="margin-top: 50px">
                <input type="image" src="~/images/success.svg" alt=”submit” name=”submit” width="50" height="50" style="float: unset" />
            </div>
        </div>
    </div>

</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
