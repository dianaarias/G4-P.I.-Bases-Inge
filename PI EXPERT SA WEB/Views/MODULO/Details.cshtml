@model PI_EXPERT_SA_WEB.Models.MODULO

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("Edit","MODULO", new { idModuloPK = Model.idModuloPK, idProyectoPK = Model.idProyectoPK})" style="float:right">
    <img src="~/edit.png" width="30" height="30" />
</a>
<a href="@Url.Action("Delete","MODULO", new { idModuloPK = Model.idModuloPK, idProyectoPK = Model.idProyectoPK})" style="float:right">
    <img src="~/trash.png" width="30" height="30" />
</a>

<div class="form-horizontal text-center">
    <h4>Información del módulo</h4>


    <div class="form-group row offset-3">
        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2", @align = "left" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.nombre, new { disabled = "disabled" })
        </div>
    </div>

    <div class="form-group row offset-3">
        @Html.LabelFor(model => model.fechaInicio, htmlAttributes: new { @class = "control-label col-md-2", @align = "left" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.fechaInicio, new { disabled = "disabled" })
        </div>
    </div>
</div>

<div class="col text-center ">
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary btn-large" })
</div>
